<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_color"
    android:orientation="vertical">

    <View
        style="@style/titleStyles"
        android:layout_width="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/select_transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/imageView_back"
            android:layout_toLeftOf="@+id/imageView_right"
            android:layout_toRightOf="@+id/imageView_back"
            android:layout_toStartOf="@+id/imageView_right"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18.0dip"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/select_transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside" />
    </RelativeLayout>
</LinearLayout>