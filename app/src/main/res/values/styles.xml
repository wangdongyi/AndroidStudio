<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.












    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- android:Theme.Light
             Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.-->
        <item name="colorPrimary">@color/text_blue</item>
        <item name="colorPrimaryDark">@color/text_blue</item>
        <item name="colorAccent">@color/text_blue</item>

    </style>

    <!-- Application thianeme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 5.0开始，可以在Style.xml文件中统一配置App的样式 -->
        <!-- 状态栏的颜色 -->
        <item name="colorPrimary">@color/top_color</item>
        <!-- 一级文本的颜色 -->
        <item name="colorPrimaryDark">@color/top_color</item>
        <!-- 二级文本的颜色 -->
        <item name="colorAccent">@color/top_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:typeface">sans</item>
        <!--<item name="android:windowAnimationStyle">@style/actAnimation</item>-->
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextStyle</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="titleStyles">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MyMenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>

    <style name="My_Start" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 重写actionbar中 OverFlow的属性 -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/button_setting</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/img_bg_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="actAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_finish</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_finish</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_back</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_finish</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_finish</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_back</item>
    </style>
    <!--
    <style name="LinearlayoutStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>






    -->

    <style name="LinearlayoutStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Widget_GifView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gifview_background</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_blue_long</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Controlitem">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- popWindow输入文字样式的LinearLayout-->
    <style name="ll_pop_txt">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/pop_bg</item>
    </style>

    <!-- popWindow标题文字-->
    <style name="tv_pop_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17.0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/top_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- popWindow副标题文字-->
    <style name="tv_pop_sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14.0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- popWindow确认按钮的LinearLayout-->
    <style name="ll_pop_ok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right|center</item>
    </style>

    <!-- popWindow确认按钮-->
    <style name="pop_dailog_cancel_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/common_pop_click</item>
        <item name="android:textColor">@color/top_color</item>
        <item name="android:textSize">16.0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">取消</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- popWindow取消按钮-->
    <style name="pop_dailog_ok_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/common_pop_click</item>
        <item name="android:textColor">@color/top_color</item>
        <item name="android:textSize">16.0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">确认</item>
        <item name="android:gravity">center</item>
    </style>
</resources>